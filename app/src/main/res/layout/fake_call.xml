<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fake_call_final"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.ac.hansung.lh2k_project.FakeCallActivity">

    <Button
        android:id="@+id/call"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/call_button_transparent"
        android:onClick="onCallClicked"
        tools:layout_editor_absoluteY="370dp"
        tools:layout_editor_absoluteX="252dp"
        android:layout_alignTop="@+id/refuse"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/refuse"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/refuse_button_transparent"
        android:onClick="onRefuseClicked"
        android:layout_marginStart="34dp"
        tools:layout_editor_absoluteY="370dp"
        tools:layout_editor_absoluteX="43dp"
        android:layout_marginBottom="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
