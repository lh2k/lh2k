<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_cctv_icon_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CCTV 위치를 지도에 표시해줍니다."
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="12.5dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_plice_icon_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경찰서 위치를 지도에 표시해줍니다."
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/main_btn_fakecall"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자신에게 전화가 오는 것처럼 할 수 있습니다.
            \n위치공유된 사용자들에게 위험알림을 보냅니다."
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/main_btn_112"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="112 번호가 적힌 다이얼창을 띄워줍니다.
            \n위치공유된 사용자들에게 위험알림을 보냅니다."
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/help_shared_user_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치공유된 사용자의 위치를 지도에 표시해줍니다."
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/help_shake_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴대폰을 여러 번 힘차게 흔들면 경고음이 울립니다.
            \n위치공유된 사용자들에게 위험알림을 보냅니다."
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_help_page_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/basic_back_btn_img"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="5dp"/>
</LinearLayout>